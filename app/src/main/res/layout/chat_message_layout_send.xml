<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:gravity="end"
    android:orientation="vertical"
    app:layout_goneMarginEnd="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:background="@drawable/chat_message_send_background"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/chatMessageSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:paddingTop="4dp"
            android:text="Hello world, noob developer this side"
            android:textColor="@color/chat_message_send_text_bg"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:id="@+id/chatMessageTimeAndTickContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginStart="4dp"
            android:gravity="end|bottom"
            android:paddingBottom="4dp"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/chatMessageSendTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:57 am"
                android:textColor="#87c3b9"
                android:textSize="11sp"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/sendMessageStatusTick"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/send_message_delivery_status"
                android:src="@drawable/blue_tick" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>