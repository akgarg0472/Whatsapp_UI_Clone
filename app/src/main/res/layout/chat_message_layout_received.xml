<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:gravity="end"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="0dp"
    app:layout_goneMarginEnd="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginEnd="64dp"
        android:background="@drawable/chat_message_received_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="start"
        android:orientation="vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/chatMessageReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:paddingTop="4dp"
            android:text="Hey there ðŸ‘‹, Welcome to the club"
            android:textColor="@color/chat_message_received_text_bg"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/chatMessageReceivedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:text="11:57 am"
            android:textColor="#87c3b9"
            android:textSize="11sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>