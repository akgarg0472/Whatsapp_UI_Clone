<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WhatsappUIClone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/tab_layout_bg_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenuDay</item>
    </style>

    <style name="chatUITheme" parent="Theme.AppCompat.NoActionBar">
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenuDay</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:actionOverflowButtonStyle">@style/CMOptionsMenuDayIcon</item>
    </style>

    <style name="chatProfileInfoTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenuDay</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:actionOverflowButtonStyle">@style/CMPIOptionsMenuDayIcon</item>
    </style>

    <style name="CMOptionsMenuDayIcon" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_baseline_more_vert_24</item>
    </style>

    <style name="CMPIOptionsMenuDayIcon" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_baseline_more_vert_24_pi_day</item>
    </style>

    <style name="CMOptionsMenuDay" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="appThemeChooserDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/app_theme_selector_bg</item>
    </style>

</resources>